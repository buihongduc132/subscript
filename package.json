{
  "name": "todo-backend-express-knex",
  "version": "1.0.0",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "heroku-postbuild": "cd server && npx knex migrate:latest",
    "client": "cd client && yarn start",
    "server": "cd server && tsx server.ts",
    "dev:server": "cd server && tsx watch --clear-screen=false server.ts",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "cd server && jest",
    "test:watch": "cd server && jest --watch",
    "start": "cd server && node server.js",
    "migrate": "cd server && knex migrate:latest",
    "migrate:make": "cd server && knex migrate:make"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "awilix": "^12.0.4",
    "axios": "^1.8.2",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "envalid": "^8.0.0",
    "express": "^4.16.4",
    "http-status-codes": "^2.3.0",
    "jest": "^24.9.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "2.5.1",
    "lodash": "^4.17.15",
    "pg": "8.0.3",
    "supertest": "^4.0.2",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "concurrently": "^4.0.1",
    "nodemon": "^2.0.2",
    "tsx": "^4.19.3"
  }
}
